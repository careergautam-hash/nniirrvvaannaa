<script>
  // Controls: toggle answers, print, download plain text
  const toggleBtn = document.getElementById('toggle-answers');
  const answerKey = document.getElementById('answer-key');
  const printBtn = document.getElementById('print');
  const downloadBtn = document.getElementById('download');

  let answersShown = false;
  toggleBtn.addEventListener('click', () => {
    answersShown = !answersShown;
    if (answersShown) {
      answerKey.classList.add('show');
      answerKey.setAttribute('aria-hidden','false');
      toggleBtn.textContent = 'Hide Answer Key';
    } else {
      answerKey.classList.remove('show');
      answerKey.setAttribute('aria-hidden','true');
      toggleBtn.textContent = 'Show Answer Key';
    }
    // if printed, ensure print CSS prints answer key only if it's visible
  });

  printBtn.addEventListener('click', () => {
    window.print();
  });

  downloadBtn.addEventListener('click', () => {
    // generate a simple plain-text version of the paper (without diagrams)
    const paper = document.getElementById('paper').cloneNode(true);
    // remove answer key (we will not include by default)
    const ak = paper.querySelector('#answer-key');
    if(ak) ak.remove();

    // remove interactive/controls like drawing area text decorations
    const strips = paper.querySelectorAll('.draw-area');
    strips.forEach(s=> {
      s.textContent = '[Space for drawing — see printed paper]';
    });

    // extract text
    function textOf(node){
      if(node.nodeType === Node.TEXT_NODE) return node.textContent.trim();
      if(node.nodeType !== Node.ELEMENT_NODE) return '';
      let txt = '';
      node.childNodes.forEach(c => {
        txt += textOf(c) + (c.nodeName === 'P' || c.nodeName === 'DIV' ? '\n' : ' ');
      });
      return txt;
    }
    const txt = textOf(paper);

    const blob = new Blob([txt], {type: 'text/plain;charset=utf-8'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'Skeleton_System_Class5_question_paper.txt';
    document.body.appendChild(a);
    a.click();
    setTimeout(()=> { URL.revokeObjectURL(url); a.remove(); }, 500);
  });

  // hide answer-key when printing unless currently visible
  window.onbeforeprint = function() {
    // nothing: answerKey visibility determines printing
  };

  // small accessibility helper: focus first input-like element (Name area)
  window.addEventListener('load', () => {
    // we don't have actual inputs; skip
  });

</script>
</body>
